<% content_for :title, "| Awards" %>
<div class="main-page-header">
  <div class="m-p-h"> 
    <%= link_to 'Home', root_path %>  
    <span class="break">
      >
    </span>  
    <%= link_to  'Awards', @page_title %>   
    <br /><br /> 
    <span class="artist-name-main">
      Awards
    </span> 
    <br /><br />
  </div>
</div> 
<br /> 
<div class="containernohome">

  <div class="col-md-9" style="padding: 0px;">
  <%= flash_messages %> <br />
  </div>
  <div class="clear"></div>
  <div class="col-md-9 col-sm-12 col-xs-12 articlesindex"> 



  <div id="custom-search-input">
      <div class="input-group col-md-12">
        <%= simple_form_for :award, url: url_for(awards_path), method: 'get' do |f| %>
          <div class="col-md-10">
           <%= f.input :query, input_html: {name: 'q', id: 'search', class: 'search-query form-control'}, label: false, placeholder: 'Search...', required: false %>
           </div>
           <div class="col-md-2 searchhid">
           <%= f.submit 'Search', class: 'btn btn-primary release-searching' %>
           </div>
        <% end %>
                    
        </div>
   </div><br />

   <% @awards.each do |award| %>
  <div class="col-md-12 col-sm-12 col-xs-12 testing" style="padding:2.5em 0px; border-right: 1px solid #cecece; border-bottom: 1px solid #cecece; ">
    <div class="col-md-4 col-xs-12 col-sm-6 new-image">
      <%= image_tag award.image.articlehome.url, :style => 'width:100%; height:100%;', :class => 'img-responsive' %> 
    </div>
    <div class="col-md-7 col-xs-12 col-sm-6 outer"> 
      <div class="inner">
      <h3 class="arttit lowercase">
        <%= link_to award.title, award_path(award) %> 
        <br /><br />
        <small><%= award.created_at.strftime('%-d %B %Y ') %></small>
      </h3>
      <p><%= sanitize award.newspreview, tags: %w(), attributes: %w(href)  %></p>
         
        <br /><br />
        </div> 
        <p class="readmoreart" style="margin-top: 13px;"><a href="<%= award_path(award) %>" class="readmorenohome">Read More</a></p>
    </div>
    <div class="clear"></div>
  </div>
<% end %>

    <div class="clear"></div>

    
</div>

<div class="col-md-3 homesidebar awardsside">  
   
 <%= render 'shared/twittersidebar' %>
   </div>

   <div class="col-md-12"> 
    <div class="middle">
      <%= will_paginate @awards, :page_links => true, :previous_label => '<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>', :next_label => '<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>' %> <br /><br />
      </div>
    </div>
</div>
<% content_for :extra_footer do %>
<%= javascript_include_tag 'artawrpre' %>
<% end %>
  