<div class="main-page-header">
<div class="m-p-h">
<%= link_to 'Home', root_path %>  <span class="break">></span>  <%= link_to 'Releases', releases_path %>   
<br /><br /> 
<span class="artist-name-main">
Releases</span> 

<div style="float:right; width:600px;    margin-top: -30px;">
<%= simple_form_for :release, url: url_for(releases_path),  
     method: 'get' do |f| %>

<table class="tablesearch2" >

<tr>
<td class="one">
  <%= f.input :query, input_html: {name: 'q', class: 'special'}, label: "Keywords", placeholder: 'Search...', required: false %>
  </td>
<td class="one">
  <%= f.input :genre, input_html: {name: 'genre'},  collection: Genre.order('name ASC').used, include_blank: 'All', required: false %> 
  </td>
<td class="one">
  <%= f.input :artist, input_html: {name: 'artist'},  collection: Artist.order('name ASC').used, include_blank: 'All', required: false %> 
  </td>
 <td class="one">
  <%= f.input :production, input_html: {name: 'production'},  collection: Production.order('name ASC').used, include_blank: 'All', required: false %> 
  </td>
  <td class="last">
  <%= f.submit 'Search', class: 'btn btn-primary searcharticles' %>

  </td></tr></table>
<% end %>
</div>

<br />  <br />

 </div>
</div> 
  <br />  <br /> 

 <div class='containernohome'> 
 
<% @releases.each do |release| %>
<div class="news"> 
 
 <div class="col-md-3"> 
<%= image_tag release.image.artistmain.url, :style => 'width:100%; height:100%;', :class => 'img-responsive' %>

 </div>

 <div class="col-md-9"  style="padding-top:20px; padding-right:25px;">
 <% if release.chart_position == 1 %>
<div class="numberone">Chart Position: No.1</div> <% else %> <% end %>
<h3 class="arttit"><%= release.title %><br /><small>Release Date: </b><%= release.date.strftime('%-d %B %Y ') %></small> </h3> 
 
<p><%= release.body %></p>  
<h5 class="arttit">Genres:<small> <%= release.genres.pluck(:name).map{|n| n.split(' ').map!(&:capitalize).join(' ')}.join(', ') %></small></h5>  
 <% if release.chart_position.blank? %>
<% else %>
<h5 class="arttit">Highest Chart Position: 
 
 <small><%= release.chart_position %></small></h5>

<% end %>

  <% if release.artists.blank? %>
<br />
 <% else %>
<h5 class="arttit">Related Artists: 
 
 <small><%= artist_list_for(release.artists) %></small></h5>
 <div class="buylinks">
  <% if release.itunes.blank? %>
<% else %>  
 <%= link_to image_tag("http://www.bucksmusicgroup.com/wp-content/uploads/2015/03/itunes.png", :class => "twittereal", :style => "width:45px; padding-right:5px;"),  release.itunes, target: "_blank" %> 
<% end %>
 <% if release.amazon.blank? %>
<% else %> 
 
 <%= link_to image_tag("http://www.bucksmusicgroup.com/wp-content/uploads/2015/03/amazon.png", :class => "twittereal", :style => "width:45px; padding-right:5px;"),  release.amazon, target: "_blank" %> 
<% end %>
    
 <% end %></div> </div>

  

  </div>
   <div class="clear"></div>   
<% end %>
 
   
 <%= will_paginate @releases, :page_links => false %>
 </div>
 <br />  <br /> 
 
 <style>
 .news {background-color:white !important;display:inline-block; margin-bottom:15px;}
.col-md-2{ padding:15px;}
.col-md-10{  padding:15px;}
.col-md-1{background-color:#767c60; padding:15px; height:181px;}
.col-md-1 a {display:block;
  -webkit-transform: rotate(270deg);
-moz-transform: rotate(270deg);
-o-transform: rotate(270deg);
writing-mode: lr-tb;
font-size:120%;
margin-top:80px;
color:white;
 }   
hr {margin-bottom:10px;   border-top: 1px solid #d3d5c9;}

.page-title2 {border: 2px solid #767c60; text-align:center;}
td.one {border-bottom:0px;}
td.last {border-bottom:0px; padding-top: 33px;}

 </style>








