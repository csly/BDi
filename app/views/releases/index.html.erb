<div class="main-page-header">
<div class="m-p-h">
<%= link_to 'Home', root_path %>  <span class="break">></span>  <%= link_to 'Releases', releases_path %>   
<br /><br /> 
<span class="artist-name-main">
Releases</span> 

<br />  <br />

 </div>
</div> 
<div class="main-page-header-search col-md-12">
 <div class="m-p-h-s">
<%= simple_form_for :release, url: url_for(releases_path),  
     method: 'get' do |f| %>

<table class="releases-search" >

<tr>
<td class="one keywords" style="padding-left:0px">
  <%= f.input :query, input_html: {name: 'q', class: 'search-query'}, label: "Keywords", placeholder: 'Search...', required: false, label: false  %>
  </td>
<td class="one genre">
  <%= f.input :genre, input_html: {name: 'genre', selected: 'sup', class: 'form-control custom'},  collection: Genre.order('name ASC').used, include_blank: 'Genre', required: false, label: false %> 
  </td>
<td class="one artist">
  <%= f.input :artist, input_html: {name: 'artist',   class: 'form-control custom'},  collection: Artist.order('name ASC').used, include_blank: 'Artist', required: false, label: false  %> 
  </td>
 <td class="one production">
  <%= f.input :production, input_html: {name: 'production', class: 'form-control custom'},  collection: Production.order('name ASC').used, include_blank: 'Production', required: false, label: false  %> 
  </td>
  <td class="last search" style="padding-right:0px;">
  <%= f.submit 'Search', class: 'btn btn-primary release-searching' %>

  </td></tr></table>
<% end %>
 </div>

</div>


 <div class="clear"></div>

<div class="col-md-12" style="padding: 0px; margin-top:15px;margin-bottom:15px;">
<%= flash_messages %></div>
  <br />  <br /> 

 <div class='containernohome'> 
 
<% @releases.each do |release| %>
<div class="news" style="width:100%"> 
 
 <div class="col-md-3"> 
<%= image_tag release.image.artistmain.url, :style => 'width:100%; height:100%;', :class => 'img-responsive' %>

 </div>

 <div class="col-md-9"  style="padding-top:20px; padding-right:25px;">
 <% if release.chart_position == 1 %>
<div class="numberone">Chart Position: No.1</div> <% else %> <% end %>
<h3 class="arttit"><%= release.title %><br /><small>Release Date: </b><%= release.date.strftime('%-d %B %Y ') %></small> </h3> 
 
<p><%= release.body %></p>  
<h5 class="arttit">Genres:<small> <%= release.genres.pluck(:name).map{|n| n.split(' ').map!(&:capitalize).join(' ')}.join(', ') %></small></h5>  
 <% if release.chart_position.blank? %>
<% else %>
<h5 class="arttit">Highest Chart Position: 
 
 <small><%= release.chart_position %></small></h5>

<% end %>

  <% if release.artists.blank? %>
<br />
 <% else %>
<h5 class="arttit">Related Artists: 
 
 <small><%= artist_list_for(release.artists) %></small></h5>
 <div class="buylinks">
  <% if release.itunes.blank? %>
<% else %>  
 <%= link_to image_tag("http://www.bucksmusicgroup.com/wp-content/uploads/2015/03/itunes.png", :class => "twittereal", :style => "width:45px; padding-right:5px;"),  release.itunes, target: "_blank" %> 
<% end %>
 <% if release.amazon.blank? %>
<% else %> 
 
 <%= link_to image_tag("http://www.bucksmusicgroup.com/wp-content/uploads/2015/03/amazon.png", :class => "twittereal", :style => "width:45px; padding-right:5px;"),  release.amazon, target: "_blank" %> 
<% end %>
    
 <% end %></div> </div>

  

  </div>
   <div class="clear"></div>   
<% end %>
 
   
 <%= will_paginate @releases, :page_links => false %>
 </div>
