<%= render 'shared/adminnav' %>
<div class="col-md-9">
<h4> List Of Artists</h4><%= link_to "+ New", new_admin_artist_path, class: "btn btn-primary"  %>
<table>
  <tr>
  <th class="id">ID</th>
  <th class="title">Name</th>
  <th class="body">Biog</th>
  <th class="created"> Created at</th>
  <th class="updated">Updated at</th>
  <th class="image">Image</th>
  <th class="edit"></th>
  </tr>
<% @artists.each do |artist| %>
  <tr>
  <td class="id"><%= artist.id %></td>
  <td class="title">  <%= link_to artist.name, admin_artist_path(artist) %></td>
  <td class="body"><%= artist.biog %></td>
  <td class="created"> <%= artist.created_at.strftime('%d-%m-%Y') %></td>
  <td class="updated"><%= artist.updated_at.strftime('%d-%m-%Y') %></td>
  <td class="image"> <%= image_tag artist.photo.url, :class =>  "imagethumb" %></td>
  <td class="edit"> <%= link_to "Edit", edit_admin_artist_path(artist), :class =>  "btn btn-primary", :method => :get  %> 
   <%= link_to 'Delete', admin_artist_path(artist), method: :delete, class: "btn btn-primary"  %></td>

  </tr>

<% end %>
</table>
</div>




</div>