<%= render 'shared/adminnav' %>
<div class="col-md-9">
<h4> List Of Press</h4><%= link_to "+ New", new_admin_press_path, class: "btn btn-primary"  %>
<table>
  <tr>
  <th class="id">ID</th>
  <th class="title">Title</th>
  <th class="body">Body</th>
  <th class="created"> Created at</th>
  <th class="updated">Updated at</th>
  <th class="image">Image</th>
  <th class="edit"></th>
  </tr>
<% @presses.each do |press| %>
  <tr>
  <td class="id"><%= press.id %></td>
  <td class="title">  <%= link_to press.title, admin_press_path(press) %></td>
  <td class="body"><%= press.body %></td>
  <td class="created"> <%= press.created_at.strftime('%d-%m-%Y') %></td>
  <td class="updated"><%= press.updated_at.strftime('%d-%m-%Y') %></td>
  <td class="image"> <%= image_tag press.image.artistmain.url, :class =>  "imagethumb" %></td>
  <td class="edit"> <%= link_to "Edit", edit_admin_press_path(press), :class =>  "btn btn-primary", :method => :get  %> 
   <%= link_to 'Delete', admin_press_path(press), method: :delete, class: "btn btn-primary"  %></td>

  </tr>

<% end %>
</table>
</div></div>




