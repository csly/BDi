<%= simple_form_for([:admin, @b_di_production], html: {multipart: true}) do |f| %>
  <%= f.input :name %>
    <%= f.input :body, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } %> 
    <%= f.input :links %>
  <%= f.file_field :image %><br />
  <%= f.submit class: 'btn btn-primary' %>
<% end %>