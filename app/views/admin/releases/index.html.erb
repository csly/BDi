<%= render 'shared/adminnav' %>
<div class="col-md-9">
<h4> List Of Releases</h4><%= link_to "+ New", new_admin_release_path, class: "btn btn-primary"  %>
<table>
  <tr>
  <th class="id">ID</th>
  <th class="title">Title</th>
  <th class="body">Body</th>
  <th class="created"> Created at</th>
  <th class="updated">Updated at</th>
  <th class="image">Image</th>
  <th class="edit"></th>
  </tr>
<% @releases.each do |release| %>
  <tr>
  <td class="id"><%= release.id %></td>
  <td class="title">  <%= link_to release.title, admin_release_path(release) %></td>
  <td class="body"><%= release.body %></td>
  <td class="created"> <%= release.created_at.strftime('%d-%m-%Y') %></td>
  <td class="updated"><%= release.updated_at.strftime('%d-%m-%Y') %></td>
  <td class="image"> <%= image_tag release.photo.url, :class =>  "imagethumb" %></td>
  <td class="edit"> <%= link_to "Edit", edit_admin_release_path(release), :class =>  "btn btn-primary", :method => :get  %> 
   <%= link_to 'Delete', admin_release_path(release), method: :delete, class: "btn btn-primary"  %></td>

  </tr>

<% end %>
</table>
</div></div>




