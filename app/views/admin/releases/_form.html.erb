<%= simple_form_for([:admin, @release], html: {multipart: true}) do |f| %>
  <%= f.input :title %><br />
  <%= f.input :body %>  <br /><br />
  <%= f.input :date, as: :date, html5: true, label: 'Release Date', class: 'btn btn-primary' %><br /><br />
  <%= f.input :pformat, label: 'Product Format' %><br />
  <%= f.input :partist, label: 'Product Artist' %><br />
  <%= f.input :rlabel, label: 'Record Label' %><br />
  <%= f.input :amazon, label: 'Amazon Link' %><br />
  <%= f.input :itunes, label: 'iTunes Link' %><br /><br />
  <%= f.input :featured_text, label: 'Featured Text' %><br />
  <%= f.input :chart_position, collection: 1..100, label: 'Highest Chart Position' %><br />
  <%= f.association :artists, collection: Artist.order('name ASC') %><br />
  <%= f.association :genres, collection: Genre.order('name ASC') %><br />
  <%= f.association :formats, collection: Format.order('name ASC'), label: 'Media Style' %><br />
  <%= f.file_field :image %> <br />
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
<br /><br />

<style>

.date, .main-title {
    width: auto;
    padding: 0 0px;
    line-height: auto;
    font-size: auto;
    letter-spacing: auto;
    display: inline-block;
    text-transform: capitalize;
    border: solid 0px #848f81;
}
</style>