<% content_for :title, "| News" %>
<div class="main-page-header">
  <div class="m-p-h"> 
    <%= link_to 'Home', root_path %>  
    <span class="break">
      >
    </span>  
    <%= link_to  'News', @page_title %>   
    <br /><br /> 
    <span class="artist-name-main">
      News
    </span> 
    <br /><br />
  </div>
</div> 
<br /><br />  
<div class="containernohome">
  <div class="col-md-9" style="padding: 0px;">
  <%= flash_messages %> <br />
  </div>
  <div class="clear"></div>
  <div class="col-md-9 col-sm-12 col-xs-12">  
    <% @articles.each do |article| %>
      <div class="col-md-11 col-sm-12 col-xs-12">
        <div class="col-md-4 col-xs-12 col-sm-6 new-image">
           <%= image_tag article.image.articlehome.url, :style => 'width:100%; height:100%;', :class => 'img-responsive' %> 
        </div>
        <div class="col-md-7 col-xs-12 col-sm-6">
           <h3 class="arttit">
           
           
            <%= link_to article.title, article_path(article) %> <br /><br /> <small><%= article.created_at.strftime('%-d %B %Y ') %></small>
           </h3>
           <div class="artp">
            <%= article.newspreview.html_safe  %>
            <br /><br />
            
            <p class="readmoreart"><a href="<%= article_path(article) %>" class="readmorenohome">Read More</a></p>
            </div>
          </div>
        <div class="clear"></div>
        <br /><hr><br />
      </div>
    <% end %>

    <div class="clear"></div>

    <div class="col-md-9"> 
    <div class="middle">
      <%= will_paginate @articles, :page_links => true, :previous_label => '<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>', :next_label => '<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>' %> <br /><br />
      </div>
    </div>
</div>
  </div>
<div class="col-md-3 homesidebar">  
  <div id="custom-search-input">
      <div class="input-group col-md-12">
        <%= simple_form_for :article, url: url_for(articles_path), method: 'get' do |f| %>
           <%= f.input :query, input_html: {name: 'q', id: 'search', class: 'form-control input-md'}, label: false, placeholder: 'Search...', required: false %>
            
        <% end %>
                    
        </div>
   </div>
<br /><br />
 <%= render 'shared/twittersidebar' %>
 
</div>


