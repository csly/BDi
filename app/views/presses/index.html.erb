<div class="main-page-header">
  <div class="m-p-h"> 
    <%= link_to 'Home', root_path %>  <span class="break">></span>  
    <%= link_to  'Press', @page_title %>   
    <br /><br /> 
      <span class="artist-name-main">Press</span> 
    <br /><br />
  </div>
</div> 
  <br />  <br />  
<div class="containernohome">
  <div class="col-md-10">
   <% @presses.each do |press| %>
      <div class="col-md-11 col-xs-12">
        <div class="col-md-4 col-xs-12 new-image">
           <%= image_tag press.image.articlehome.url, :style => 'width:100%; height:100%;', :class => 'img-responsive' %> 
        </div>
        <div class="col-md-7">
           <h3 class="arttit">
            <small><%= press.created_at.strftime('%-d %B %Y ') %></small>
            <br /><br />
            <%= link_to press.title, press_path(press) %>
           </h3>
           <div class="artp">
            <%= press.newspreview.html_safe  %>
            <br /><br />
            
            <p><a href="<%= press_path(press) %>" class="readmorenohome">Read More</a></p>
            </div>
          </div>
        <div class="clear"></div>
        <br /><hr><br />
      </div>
    <% end %>

    <div class="clear"></div>

    <div class="col-md-10">
      <%= will_paginate @presses, :page_links => true %>
    </div>
</div>
<div class="col-md-2 sidebar">
  <div id="custom-search-input">
      <div class="input-group col-md-12">
        <%= simple_form_for :press, url: url_for(presses_path), method: 'get' do |f| %>
           <%= f.input :query, input_html: {name: 'q', id: 'search', class: 'form-control input-md'}, label: false, placeholder: 'Search...', required: false %>
            
        <% end %>
                    
        </div>
   </div>
 <%= render 'shared/mainpagesidebar' %>
 
