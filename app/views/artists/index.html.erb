

<div class="main-page-header">
<div class="m-p-h">
<%= link_to 'Home', root_path %>  <span class="break">></span>  <%= link_to 'Artists', artists_path %> 
</span>
<br /><br />
<span class="artist-name-main">
Artists
</span>
<div style="float:right; width:600px;    margin-top: -30px;">
<%= simple_form_for :artist, url: url_for(artists_path),  
     method: 'get' do |f| %>

<table class="tablesearch2">

<tr>
<td class="one">
  <%= f.input :query, input_html: {name: 'q', class: 'special'}, label: "Keywords", placeholder: 'Search...', required: false %>
  </td>
<td class="one">
  <%= f.input :genre, input_html: {name: 'genre'},  collection: Genre.order('name ASC').used, include_blank: 'All', required: false %> 
  </td>
<td class="one">
  <%= f.input :type, input_html: {name: 'type'},  collection: Type.order('name ASC').used, include_blank: 'All', required: false %> 
  </td>

  <td class="last">
  <%= f.submit 'Search', class: 'btn btn-primary searcharticles' %>

  </td></tr></table>
<% end %>

</div>

 <br /><br /></div>
</div> 
  <br />  <br /> 

 <div class='containernohome'> 
 
  <div class="artists"> 
 
<ul class="grid-items">
<% @artists.each do |artist| %> 
<li class="col-md-2 col-xs-6">
<div class="artistmain">
<%= link_to(artist_path(artist)) do %>
 <%= image_tag artist.image.artistmain.url, :style => 'width:100%; height:100%;', :class => 'img-responsive' %> 
  <h5 style="font-size:120%"><%= artist.name %></h5>
  <br />
  <% end %>
  </div>
</li> 
 <% end %>
</ul> 
 </div> 
</div>

  <div class="clear"></div><br /><br >

 