

<div class="main-page-header">
<div class="m-p-h">
<%= link_to 'Home', root_path %>  <span class="break">></span>  <%= link_to 'Artists', artists_path %> 
</span>
<br /><br />
<span class="artist-name-main">
Artists
</span>
 

 <br /><br /></div>
</div> 
<div class="main-page-header-search col-md-12">
 <div class="m-p-h-s">
<%= simple_form_for :artist, url: url_for(artists_path),  
     method: 'get' do |f| %>

<table class="releases-search" >

<tr>
<td class="one keywords">
  <%= f.input :query, input_html: {name: 'q', class: 'search-query'}, placeholder: 'Search...', required: false, label: false  %>
  </td>
<td class="one genre">
  <%= f.input :genre, input_html: {name: 'genre', class: 'form-control custom'},  collection: Genre.order('name ASC').used, include_blank: 'All', include_blank: 'Genre', required: false, label: false  %> 
  </td>
<td class="one artist">
  <%= f.input :type, input_html: {name: 'type', class: 'form-control custom'},  collection: Type.order('name ASC').used, include_blank: 'All', include_blank: 'Type', required: false, label: false  %> 
  </td>
  
  <td class="last search">
  <%= f.submit 'Search', class: 'btn btn-primary release-searching' %>

  </td></tr></table>
<% end %>
 </div>

</div>


  <br />  <br /> 

 <div class='containernohome'> 
 
  <div class="artists"> 
 
<ul class="grid-items">
<% @artists.each do |artist| %> 
<li class="col-md-3 col-xs-6 col-sm-3">
<div class="artistmain">
<%= link_to(artist_path(artist)) do %>
 <%= image_tag artist.photo.artistmain.url, :style => 'width:100%; height:100%;', :class => 'img-responsive' %> 
  <h5 style="font-size:120%"><%= artist.name %></h5>
  <br />
  <% end %>
  </div>
</li> 
 <% end %>
</ul> 
 </div> 
</div>

  <div class="clear"></div><br /><br >

