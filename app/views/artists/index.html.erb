      </li>

      <li class="col-md-3 col-xs-6 col-sm-3">
        <%= f.collection_select :types_id_eq, Type.order('name asc').used, :id, :name, {include_blank: 'Type'}, class: 'form-control custom' %>
      </li>

      <li class="col-md-3 col-xs-6 col-sm-3">
      <%= f.submit 'Search', class: 'btn btn-primary release-searching roster-search' %>
      </li>
 
</ul>
