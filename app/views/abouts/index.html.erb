<div class="about">
<% @abouts.each do |about| %>
  
  <div class="col-md-12">
     <%= about.body.html_safe %>
  </div>
   
<% end %>
<div class="clear"></div>

<% @staffs.each do |staff| %>

   <div class="col-md-3">
    <%= image_tag(staff.photo.url, :class => "aboutimage") %><hr>
    <h3 class="staff-info"><%= staff.name %> </h3> <h4 class="staff-info"><%= staff.role %></h4>
    <hr>
    <h5 class="staff-info">E: <%= staff.email %></h5>
    <h5 class="staff-info">T: <%= staff.phone %></h5>
    
       <hr>
   </div>
   <div class="col-md-9">  
   <%= staff.biog.html_safe %>
  
     </div>
   <div class="clear"></div> <br /> 
<% end %> 

</div>